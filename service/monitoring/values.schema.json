{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "monitoring": {
      "type": "object",
      "properties": {
        "cluster": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "anyOf": [
                { "const": "" },
                { "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$" }
              ],
              "description": "Cluster name identifier for multi-cluster observability"
            }
          },
          "required": ["name"]
        },
        "global": {
          "type": "object",
          "properties": {
            "platform": {
              "type": "string",
              "enum": ["", "openshift"],
              "description": "Target platform for optimized configurations"
            }
          }
        },
        "destinations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9-]*[a-zA-Z0-9])?$",
                "description": "Destination name"
              },
              "type": {
                "type": "string",
                "enum": ["prometheus", "loki", "otlp", "jaeger"],
                "description": "Destination type"
              },
              "url": {
                "type": "string",
                "pattern": "^https?://.*",
                "description": "Destination URL"
              },
              "auth": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["basic", "bearer", "oauth2"],
                    "description": "Authentication type"
                  },
                  "username": {
                    "type": "string",
                    "description": "Authentication username"
                  },
                  "password": {
                    "type": "string",
                    "description": "Authentication password"
                  },
                  "token": {
                    "type": "string",
                    "description": "Bearer token"
                  },
                  "tenantIdFrom": {
                    "type": "string",
                    "description": "Tenant ID source expression"
                  }
                },
                "required": ["type"]
              },
              "metrics": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "description": "Enable metrics for this destination"
                  }
                }
              },
              "logs": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "description": "Enable logs for this destination"
                  }
                }
              },
              "traces": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "description": "Enable traces for this destination"
                  }
                }
              }
            },
            "required": ["name", "type", "url"]
          },
          "description": "List of observability destinations"
        },
        "clusterMetrics": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable collection of cluster-wide metrics"
            }
          },
          "required": ["enabled"]
        },
        "clusterEvents": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable collection of Kubernetes events"
            }
          },
          "required": ["enabled"]
        },
        "nodeLogs": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable collection of node-level system logs"
            }
          },
          "required": ["enabled"]
        },
        "podLogs": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable collection of pod logs via node-based collection"
            }
          },
          "required": ["enabled"]
        },
        "podLogsViaKubernetesApi": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable collection of pod logs via Kubernetes API"
            }
          },
          "required": ["enabled"]
        },
        "applicationObservability": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable application observability features"
            }
          },
          "required": ["enabled"]
        },
        "autoInstrumentation": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable automatic instrumentation of applications"
            }
          },
          "required": ["enabled"]
        },
        "annotationAutodiscovery": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable automatic discovery of services via annotations"
            }
          },
          "required": ["enabled"]
        },
        "prometheusOperatorObjects": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable support for Prometheus Operator custom resources"
            }
          },
          "required": ["enabled"]
        },
        "profiling": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable continuous profiling of applications"
            }
          },
          "required": ["enabled"]
        },
        "profilesReceiver": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable profiles receiver for collecting performance data"
            }
          },
          "required": ["enabled"]
        },
        "alloy-metrics": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Alloy metrics collection agents"
            }
          },
          "required": ["enabled"]
        },
        "alloy-singleton": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable singleton Alloy deployment"
            }
          },
          "required": ["enabled"]
        },
        "alloy-logs": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Alloy logs collection agents"
            }
          },
          "required": ["enabled"]
        },
        "alloy-receiver": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Alloy receiver for telemetry data"
            }
          },
          "required": ["enabled"]
        },
        "alloy-profiles": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Alloy profiles collection agents"
            }
          },
          "required": ["enabled"]
        }
      },
      "required": ["cluster", "destinations", "clusterMetrics", "clusterEvents", "nodeLogs", "podLogs", "podLogsViaKubernetesApi", "applicationObservability", "autoInstrumentation", "annotationAutodiscovery", "prometheusOperatorObjects", "profiling", "profilesReceiver", "alloy-metrics", "alloy-singleton", "alloy-logs", "alloy-receiver", "alloy-profiles"]
    }
  },
  "required": ["monitoring"]
}

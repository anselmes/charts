{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "rbac": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
            "description": "RBAC binding name"
          },
          "namespace": {
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
            "description": "Target namespace for RBAC binding"
          },
          "role": {
            "type": "object",
            "properties": {
              "kind": {
                "type": "string",
                "enum": ["Role", "ClusterRole"],
                "description": "Role kind"
              },
              "name": {
                "type": "string",
                "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                "description": "Role name"
              }
            },
            "required": ["kind", "name"]
          },
          "subjects": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "kind": {
                  "type": "string",
                  "enum": ["User", "Group", "ServiceAccount"],
                  "description": "Subject kind"
                },
                "name": {
                  "type": "string",
                  "description": "Subject name"
                },
                "apiGroup": {
                  "type": "string",
                  "description": "API group for the subject"
                },
                "namespace": {
                  "type": "string",
                  "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                  "description": "Subject namespace"
                }
              },
              "required": ["kind", "name"]
            },
            "minItems": 1
          }
        },
        "required": ["name", "role", "subjects"]
      },
      "description": "RBAC configurations for Pinniped"
    },
    "auth": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable JWT authenticator"
        },
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
          "description": "JWT authenticator name"
        },
        "audience": {
          "type": "string",
          "description": "JWT audience"
        },
        "issuer": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "pattern": "^https?://.*",
              "description": "JWT issuer URL"
            },
            "ca": {
              "type": "string",
              "description": "CA certificate for issuer verification"
            }
          },
          "required": ["url"]
        }
      },
      "required": ["enabled"]
    },
    "domain": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable federation domain"
        },
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
          "description": "Federation domain name"
        },
        "providers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                "description": "Provider name"
              }
            },
            "required": ["name"]
          },
          "description": "Identity providers for the federation domain"
        },
        "issuer": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "pattern": "^https?://.*",
              "description": "Federation domain issuer URL"
            },
            "cert": {
              "type": "object",
              "properties": {
                "create": {
                  "type": "boolean",
                  "description": "Create TLS certificate"
                },
                "name": {
                  "type": "string",
                  "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                  "description": "Certificate name"
                },
                "dnsNames": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "^[a-z0-9.-]+$"
                  },
                  "description": "DNS names for the certificate"
                },
                "issuerRef": {
                  "type": "object",
                  "properties": {
                    "kind": {
                      "type": "string",
                      "enum": ["Issuer", "ClusterIssuer"],
                      "description": "Issuer kind"
                    },
                    "name": {
                      "type": "string",
                      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                      "description": "Issuer name"
                    }
                  },
                  "required": ["kind", "name"]
                }
              },
              "required": ["create"]
            }
          },
          "required": ["url"]
        }
      },
      "required": ["enabled"]
    },
    "idp": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable identity provider"
        },
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
          "description": "Identity provider name"
        },
        "issuer": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "pattern": "^https?://.*",
              "description": "Identity provider issuer URL"
            },
            "secret": {
              "type": "object",
              "properties": {
                "create": {
                  "type": "boolean",
                  "description": "Create OIDC credentials secret"
                },
                "name": {
                  "type": "string",
                  "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                  "description": "Secret name"
                },
                "clientID": {
                  "anyOf": [
                    { "type": "string" },
                    { "type": "null" }
                  ],
                  "description": "OIDC client ID"
                },
                "clientSecret": {
                  "anyOf": [
                    { "type": "string" },
                    { "type": "null" }
                  ],
                  "description": "OIDC client secret"
                }
              },
              "required": ["create"]
            },
            "ca": {
              "type": "string",
              "description": "CA certificate for issuer verification"
            }
          },
          "required": ["url"]
        }
      },
      "required": ["enabled"]
    },
    "gateway": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable gateway configuration"
        },
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
          "description": "Gateway name"
        },
        "namespace": {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
          "description": "Gateway namespace"
        },
        "hostnames": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9.-]+$"
          },
          "description": "Gateway hostnames"
        }
      },
      "required": ["enabled"]
    },
    "pinniped": {
      "type": "object",
      "properties": {
        "install": {
          "type": "boolean",
          "description": "Install Pinniped components"
        },
        "image": {
          "type": "object",
          "properties": {
            "registry": {
              "type": "string",
              "pattern": "^[a-z0-9.-]+$",
              "description": "Image registry"
            },
            "repository": {
              "type": "string",
              "description": "Image repository"
            },
            "tag": {
              "type": "string",
              "description": "Image tag"
            },
            "digest": {
              "type": "string",
              "description": "Image digest"
            }
          }
        },
        "concierge": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Pinniped Concierge"
            },
            "replicaCount": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of Concierge replicas"
            },
            "configuration": {
              "type": "string",
              "description": "Concierge configuration template"
            },
            "credentialIssuerConfig": {
              "type": "string",
              "description": "Credential issuer configuration"
            },
            "resourcesPreset": {
              "type": "string",
              "enum": ["none", "nano", "micro", "small", "medium", "large", "xlarge"],
              "description": "Resources preset for Concierge"
            }
          },
          "required": ["enabled"]
        },
        "supervisor": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Pinniped Supervisor"
            },
            "replicaCount": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of Supervisor replicas"
            },
            "configuration": {
              "type": "string",
              "description": "Supervisor configuration template"
            },
            "resourcesPreset": {
              "type": "string",
              "enum": ["none", "nano", "micro", "small", "medium", "large", "xlarge"],
              "description": "Resources preset for Supervisor"
            },
            "service": {
              "type": "object",
              "properties": {
                "public": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
                      "description": "Public service type"
                    }
                  },
                  "required": ["type"]
                }
              }
            }
          },
          "required": ["enabled"]
        }
      },
      "required": ["install"]
    }
  },
  "required": ["rbac", "auth", "domain", "idp", "gateway", "pinniped"]
}

{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "CSI (Container Storage Interface) Service Chart Values Schema",
  "description": "Schema for validating values for the CSI service chart that manages storage provider integrations",
  "properties": {
    "openebs": {
      "type": "object",
      "description": "Configuration for OpenEBS - Open Source Container Attached Storage",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable OpenEBS storage solutions deployment",
          "default": true
        }
      },
      "additionalProperties": true
    },
    "openstack-cinder-csi": {
      "type": "object",
      "description": "Configuration for OpenStack Cinder CSI Driver",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Cinder CSI driver deployment",
          "default": false
        }
      },
      "additionalProperties": true
    },
    "rook-ceph": {
      "type": "object",
      "description": "Configuration for Rook Ceph Operator",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Rook Ceph operator deployment",
          "default": false
        }
      },
      "additionalProperties": true
    },
    "rook-ceph-cluster": {
      "type": "object",
      "description": "Configuration for Rook Ceph Cluster",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Ceph cluster deployment",
          "default": false
        }
      },
      "additionalProperties": true
    },
    "vsphere-csi-driver": {
      "type": "object",
      "description": "Configuration for VMware vSphere CSI Driver",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable vSphere CSI driver deployment",
          "default": false
        }
      },
      "additionalProperties": true
    },
    "aws-ebs-csi-driver": {
      "type": "object",
      "description": "Configuration for AWS EBS CSI Driver",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable AWS EBS CSI driver deployment",
          "default": false
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Knative version"
    },
    "resources": {
      "type": "object",
      "properties": {
        "rabbitmq": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable RabbitMQ integration"
            },
            "brokers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                    "description": "Broker name"
                  },
                  "config": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                        "description": "Config name"
                      },
                      "queueType": {
                        "type": "string",
                        "enum": ["quorum", "classic"],
                        "description": "RabbitMQ queue type"
                      },
                      "create": {
                        "type": "boolean",
                        "description": "Create the broker config"
                      }
                    },
                    "required": ["name", "queueType", "create"]
                  },
                  "deadLetterSink": {
                    "type": "object",
                    "properties": {
                      "ref": {
                        "type": "object",
                        "properties": {
                          "apiVersion": {
                            "type": "string",
                            "pattern": "^[a-z0-9.-]+/v[a-z0-9]+$"
                          },
                          "kind": {
                            "type": "string",
                            "pattern": "^[A-Z][a-zA-Z0-9]*$"
                          },
                          "name": {
                            "type": "string",
                            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                          },
                          "namespace": {
                            "type": "string",
                            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                          }
                        },
                        "required": ["apiVersion", "kind", "name"]
                      }
                    },
                    "required": ["ref"]
                  }
                },
                "required": ["name", "config"]
              }
            },
            "sources": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                    "description": "Source name"
                  },
                  "exchangeName": {
                    "type": "string",
                    "description": "RabbitMQ exchange name"
                  },
                  "queueName": {
                    "type": "string",
                    "description": "RabbitMQ queue name"
                  },
                  "sinkRef": {
                    "type": "object",
                    "properties": {
                      "apiVersion": {
                        "type": "string",
                        "pattern": "^[a-z0-9.-]+/v[a-z0-9]+$"
                      },
                      "kind": {
                        "type": "string",
                        "pattern": "^[A-Z][a-zA-Z0-9]*$"
                      },
                      "name": {
                        "type": "string",
                        "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                      },
                      "namespace": {
                        "type": "string",
                        "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                      }
                    },
                    "required": ["apiVersion", "kind", "name"]
                  }
                },
                "required": ["name", "exchangeName", "queueName"]
              }
            },
            "clusterRef": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                  "description": "RabbitMQ cluster name"
                },
                "namespace": {
                  "type": "string",
                  "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                  "description": "RabbitMQ cluster namespace"
                },
                "vhost": {
                  "type": "string",
                  "description": "RabbitMQ virtual host"
                }
              },
              "required": ["name"]
            }
          },
          "required": ["enabled"]
        }
      }
    },
    "event": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Knative Eventing"
        },
        "defaultBrokerClass": {
          "type": "string",
          "enum": ["MTChannelBasedBroker", "KafkaBroker", "RabbitMQBroker"],
          "description": "Default broker class"
        },
        "config": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable custom configurations"
            },
            "channel": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "Channel configurations"
            },
            "broker": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "Broker configurations"
            }
          },
          "required": ["enabled"]
        },
        "sources": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable event sources"
            },
            "ceph": {
              "type": "boolean",
              "description": "Enable Ceph source"
            },
            "github": {
              "type": "boolean",
              "description": "Enable GitHub source"
            },
            "gitlab": {
              "type": "boolean",
              "description": "Enable GitLab source"
            },
            "kafka": {
              "type": "boolean",
              "description": "Enable Kafka source"
            },
            "natss": {
              "type": "boolean",
              "description": "Enable NATS Streaming source"
            },
            "rabbitmq": {
              "type": "boolean",
              "description": "Enable RabbitMQ source"
            },
            "redis": {
              "type": "boolean",
              "description": "Enable Redis source"
            }
          },
          "required": ["enabled"]
        },
        "backstage": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Backstage integration"
            },
            "version": {
              "type": "string",
              "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$",
              "description": "Backstage version"
            }
          },
          "required": ["enabled"]
        }
      },
      "required": ["enabled"]
    },
    "server": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Knative Serving"
        },
        "domain": {
          "type": "string",
          "pattern": "^[a-z0-9.-]+$",
          "description": "Default domain for services"
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of replicas"
        },
        "security": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable security features"
            },
            "guard": {
              "type": "boolean",
              "description": "Enable security guard"
            }
          },
          "required": ["enabled"]
        },
        "network": {
          "type": "object",
          "properties": {
            "gatewayAPI": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "description": "Enable Gateway API support"
                },
                "external": {
                  "type": "object",
                  "description": "External gateway configuration"
                },
                "internal": {
                  "type": "object",
                  "description": "Internal gateway configuration"
                }
              },
              "required": ["enabled"]
            },
            "kourier": {
              "type": "object",
              "properties": {
                "service": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
                      "description": "Kourier service type"
                    }
                  },
                  "required": ["type"]
                }
              },
              "required": ["service"]
            }
          }
        },
        "ingress": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["gateway-api", "kourier"],
              "description": "Ingress type"
            }
          }
        },
        "certmanager": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Cert-Manager integration"
            },
            "issuerRef": {
              "type": "object",
              "properties": {
                "clusterIssuer": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                      "description": "Cluster issuer name"
                    }
                  },
                  "required": ["name"]
                },
                "localIssuer": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
                      "description": "Local issuer name"
                    }
                  },
                  "required": ["name"]
                }
              }
            }
          },
          "required": ["enabled"]
        }
      },
      "required": ["enabled"]
    },
    "operator": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Knative Operator"
        }
      },
      "required": ["enabled"]
    }
  },
  "required": ["version", "operator"]
}

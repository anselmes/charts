{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KCM Chart Values",
  "description": "Schema for the values of the KCM Helm chart.",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "templates": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "management": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "access": {
          "type": "object",
          "additionalProperties": true
        },
        "providers": {
          "type": ["array", "null"]
        },
        "capi": {
          "type": "object"
        },
        "kcm": {
          "type": "object"
        }
      }
    },
    "release": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "providers": {
          "type": ["array", "null"]
        },
        "templatesRepoURL": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "controller": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "createAccessManagement": {
          "type": "boolean"
        },
        "createManagement": {
          "type": "boolean"
        },
        "createRelease": {
          "type": "boolean"
        },
        "createTemplates": {
          "type": "boolean"
        },
        "affinity": {
          "type": "object"
        },
        "nodeSelector": {
          "type": "object"
        },
        "tolerations": {
          "type": "array"
        },
        "templatesRepoURL": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "global": {
      "type": "object",
      "additionalProperties": true
    },
    "kcm": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "install": {
          "type": "boolean"
        }
      }
    },
    "k0rdent-enterprise": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "install": {
          "type": "boolean"
        },
        "controller": {
          "type": "object",
          "additionalProperties": true
        },
        "k0rdent-ui": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
